generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  phone     String?  @unique
  password  String?  // bcrypt hash for password login
  createdAt DateTime @default(now())
  prompts   Prompt[]
  otps      OtpCode[]
}

model Prompt {
  id          String   @id @default(cuid())
  title       String
  idea        String
  output      String
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model OtpCode {
  id         String   @id @default(cuid())
  channel    String   // "sms" | "whatsapp" | "email"
  target     String   // phone number or email
  codeHash   String
  expiresAt  DateTime
  consumedAt DateTime?
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt  DateTime @default(now())

  @@index([target, channel])
}
